<xml>
	<!-- This file holds info for laying out the Bartok card game. -->
	
	<!-- The multiplier is multiplied by the x and y attributes below. -->
	<!-- This determines how loose or tight the layout is. --> 
	<multiplier x="1" y="1" />

  <!-- The position of the stack of free cards and the offset relative to each other -->
  <slot type="drawpile" x="1.8" y="0" xstagger="0.05" layer="1"/>
  
  <!-- Position of the discarded card stack and the target card -->
  <slot type="discardpile" x="-1.8" y="0" layer="2"/>

  <!-- Target map position -->
  <slot type="target"  x="-1.8" y="0" layer="4"/>
  
  <!-- The following slots determine the card positions in the hands of each of the four players -->
  <slot type="hand" x="0" y="-10" rot="0" player="1" layer="3"/>
  <slot type="hand" x="-7.5" y="0" rot="270" player="2" layer="3"/>
  <slot type="hand" x="0" y="10" rot="180" player="3" layer="3"/>
  <slot type="hand" x="7.5" y="0" rot="90" player="4" layer="3"/>
  
</xml>
	